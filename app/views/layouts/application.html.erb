                  <li><a class="grey-text text-lighten-3" href="#!"><i class="fa fa-linkedin" aria-hidden="true"></i></a></li>
                  <li><a class="grey-text text-lighten-3" href="#!"><i class="fa fa-github" aria-hidden="true"></i></a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
           <p>Copyright &copy; <script>document.write(new Date().getFullYear())</script> Code4Pro</p>
            <%= link_to 'About Us', pages_about_path, class: "grey-text text-lighten-4 right" %>
            </div>
          </div>
        </footer>
     <script src="https://kit.fontawesome.com/444a4d875c.js" crossorigin="anonymous"></script>
    <script> $(document).ready(function(){
        $('.sidenav').sidenav();
        $(".dropdown-trigger").dropdown();
      });
    </script>        
